{
  "name": "routewatch",
  "version": "1.0.0",
  "description": "Track route travel times over time. Collect, store, and visualize traffic data.",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "node backend/server.js",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm install --include=dev && npx vite build",
    "db:init": "node backend/db/init.js",
    "test:apis": "node scripts/test-apis.js"
  },
  "dependencies": {
    "better-sqlite3": "^11.6.0",
    "cookie-session": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.4",
    "express": "^4.21.1",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.19.0",
    "node-cron": "^3.0.3",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
